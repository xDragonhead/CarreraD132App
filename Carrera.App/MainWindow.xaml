<Window x:Class="Carrera.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carrera.App"
        mc:Ignorable="d"
        Title="Carrera D132 – PC Control (MVP)" Height="720" Width="1100" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="  " />
            <TextBlock Text="{Binding StatusText}"/>
            <TextBlock Text="   " />
            <TextBlock Text="Countdown:" FontWeight="Bold"/>
            <TextBlock Text="  " />
            <TextBlock Text="{Binding CountdownDisplay}"/>
        </StackPanel>

        <!-- Main Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Spalte: BLE -->
            <GroupBox Header="Bluetooth – AppConnect">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                        <Button Content="Scannen" Command="{Binding ScanCommand}"/>
                        <Button Content="Verbinden" Command="{Binding ConnectCommand}"/>
                        <TextBlock Text="  Gerät:" VerticalAlignment="Center"/>
                        <ComboBox Width="300" ItemsSource="{Binding Devices}"
                                  SelectedItem="{Binding SelectedDevice}"
                                  DisplayMemberPath="Name" />
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding Characteristics}" AutoGenerateColumns="False" Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service" Binding="{Binding ServiceUuid}" Width="*"/>
                            <DataGridTextColumn Header="Characteristic" Binding="{Binding CharacteristicUuid}" Width="*"/>
                            <DataGridTextColumn Header="Props" Binding="{Binding Properties}" Width="200"/>
                            <DataGridTextColumn Header="Letzte Daten" Binding="{Binding LastValueHex}" Width="250"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </GroupBox>

            <!-- Rechte Spalte: Rennkontrolle -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <GroupBox Header="Rennkontrolle">
                    <StackPanel>
                        <Button Content="Start-Countdown (5 Lichter)" Command="{Binding StartCountdownCommand}"/>
                        <Button Content="Rennen START" Command="{Binding RaceStartCommand}"/>
                        <Button Content="Rennen STOP" Command="{Binding RaceStopCommand}"/>
                        <CheckBox Content="Safety Car / Full Course Yellow" IsChecked="{Binding SafetyCar}"/>
                        <CheckBox Content="Ghost-Car aktiv" IsChecked="{Binding GhostCar}"/>
                        <Button Content="Telemetry anzeigen" Command="{Binding ShowTelemetryCommand}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Live-Log" Margin="0,10,0,0">
                    <ScrollViewer Height="260">
                        <ItemsControl ItemsSource="{Binding Log}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="© 2025 – D132 PC Control MVP"/>
        </StackPanel>
    </Grid>
</Window>
